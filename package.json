{
  "name": "parawave-ptt",
  "private": true,
  "version": "1.0.0",
  "description": "Application PTT Parapente - iOS + Cloudflare Workers Backend",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "apps/backend-admin",
    "apps/cloudflare-worker"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:env": "turbo run build:env",
    "build:reproductible": "./build-reproductible-dev.sh",
    "dev": "turbo run dev",
    "dev:env": "turbo run dev:env",
    "preview:env": "turbo run preview:env",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev:client": "turbo run dev --filter=ptt-admin-frontend",
    "dev:worker": "turbo run dev --filter=ptt-backend-worker",
    "dev:client:env": "turbo run dev:env --filter=ptt-admin-frontend",
    "dev:worker:env": "turbo run dev:env --filter=ptt-backend-worker",
    "build:client": "turbo run build --filter=ptt-admin-frontend",
    "build:worker": "turbo run build --filter=ptt-backend-worker",
    "build:client:env": "turbo run build:env --filter=ptt-admin-frontend",
    "build:worker:env": "turbo run build:env --filter=ptt-backend-worker",
    "deploy:worker": "turbo run deploy --filter=ptt-backend-worker"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "turbo": "2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  }
}
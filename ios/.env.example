# ParaWave PTT - Configuration Environment Variables
# Copy this file to .env and update with your actual values

# Apple App Configuration
APPLE_APP_BUNDLE_ID=club.highcanfly.parawave-ptt

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Authentication Provider
AUTHENTICATION_PROVIDER_TYPE=auth0

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_SCOPE="openid profile email read:api write:api admin:api"
AUTH0_AUDIENCE=http://localhost:5173

# Auth0 Management API
AUTH0_MANAGEMENT_AUDIENCE=https://your-domain.auth0.com/api/v2/
AUTH0_MANAGEMENT_CLIENT_ID=your-management-client-id
AUTH0_MANAGEMENT_CLIENT_SECRET=your-management-client-secret

# API Configuration
API_BASE_URL=http://localhost:8787/api/v1
API_VERSION=1.0.0
API_TIMEOUT=30.0
MAX_RETRY_ATTEMPTS=3

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Permissions
READ_PERMISSION=read:api
WRITE_PERMISSION=write:api
ADMIN_PERMISSION=admin:api
ACCESS_PERMISSION_PREFIX=access
TENANT_ADMIN_PERMISSION=tenant:admin

# Environment
ENVIRONMENT=development
DEBUG_ENABLED=true

# PTT Configuration
MAX_TRANSMISSION_DURATION=60.0
EMERGENCY_CHANNEL_ID=emergency-global

# Security
CRYPTOKEN=your-crypto-token

# Development URLs (used in development mode)
DEV_BACKEND_URL=http://localhost:8787/api/v1
DEV_WEBSOCKET_URL=ws://localhost:8787/api/v1/transmissions/ws

# Production URLs (used in production mode)
PROD_BACKEND_URL=https://ptt-backend.highcanfly.club/api/v1
PROD_WEBSOCKET_URL=wss://ptt-backend.highcanfly.club/api/v1/transmissions/ws